<div class="post">
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>
                <a href="/post/{{post.id}}">
                {{post.title}}</a>
            </h2>
            <div>
                Posted by {{post.user.username}} on {{format_date post.dateCreated}}
            </div>
        </div>
        <div class="card-body">
            {{post.body}}
        </div>
    </article>

    {{#if post.comments}}

    <div class="card">
        <div class="card-header">
            <h3>Comments</h3>
        </div>
        <div class="card-body">
            {{#each post.comments}}
            <div>
                <p>{{body}}</p>
                <p>Entered: {{User.username}}, {{format_date post.dateCreated}}</p>
            </div>
            {{/each}}
        </div>
    </div>

    {{/if}}

    {{#if loggedIn}}

    <form id="new-comment-form" class="card">
        <div class="card-header">
            <h3>Leave a Comment</h3>
        </div>
        <div class="card-body">
            <label for="comment-body" class="form-label">Comment</label>
            <textarea name="comment-body" class="form-input"></textarea>
            <button type="submit" class="btn">Submit</button>
        </div>
    </form>

    {{/if}}

</div>

<script src=".././public/js/comment.js"></script>