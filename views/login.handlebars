<div class="card">
    {{!-- login, username input, password input, button to login, button to sign up instead --}}

    <div class="card-header">
        <h2>Login</h2>
    </div>

    <form id="login-form" class="card-body">
        <div class="form-outline mb-4">
            <input type="text" id="username-input-login">
            <label for="username-input-login">Username</label>
        </div>
        <div class="form-outline mb-4">
            <input type="password" id="password-input-login">
            <label for="password-input-login">Password</label>
        </div>
        <button type="submit" id="login-btn" class="btn btn-block mb-4">Log in</button>
        <a type="button" href="/signup">Sign up instead</a>
    </form>

</div>

<script src="../public/js/login.js"></script>