<div class="card">
    {{!-- signup, username input, password input, button to signup, button to login instead --}}

    <div class="card-header">
        <h2>Sign Up</h2>
    </div>

    <form id="signup-form" class="card-body">
        <div class="form-outline mb-4">
            <input type="text" id="username-input-signup">
            <label for="username-input-signup">Username</label>
        </div>
        <div class="form-outline mb-4">
            <input type="password" id="password-input-signup">
            <label for="password-input-signup">Password</label>
        </div>
        <button type="submit" id="signup-btn" class="btn btn-block mb-4">Sign up</button>
        <a type="button" href="/login">Log in instead</a>
    </form>

</div>

<script src="../public/js/signup.js"></script>