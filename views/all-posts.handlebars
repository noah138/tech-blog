<div class="posts">
    
    {{#each posts}}

    {{!-- this display shows all post info --}}
    <div class="card">
        <div class="card-header flex-row justify-space-between">
            <div>
                <h2>
                    <a href="/post/{{id}}">{{title}}</a>
                </h2>
            </div>
            <div>
                posted by {{User.username}} on {{format_date dateCreated}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </div>

    {{/each}}

</div>